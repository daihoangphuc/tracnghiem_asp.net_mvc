@model TracNghiem.Models.User
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quiz - Nhập Thông Tin</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">
    <div class="container mx-auto p-4 sm:p-8">
        <h1 class="text-4xl font-bold mb-8 text-center text-blue-600">Quiz</h1>
        <div class="bg-white max-w-md shadow-md rounded-lg p-6 mb-8 mx-auto">
            <h2 class="text-2xl font-semibold mb-4 text-center">Cung cấp thông tin</h2>
            @using (Html.BeginForm("Create", "Users", FormMethod.Post))
            {
                <div class="space-y-4">
                    <div>
                        @Html.LabelFor(m => m.UserName, new { @class = "block text-lg font-medium text-gray-700" })
                        @Html.TextBoxFor(m => m.UserName, new { @class = "mt-1 block w-full p-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" })
                        @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-red-500" })
                    </div>
                    <div>
                        @Html.LabelFor(m => m.UserClassName, new { @class = "block text-lg font-medium text-gray-700" })
                        @Html.TextBoxFor(m => m.UserClassName, new { @class = "mt-1 block w-full p-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500 sm:text-sm" })
                        @Html.ValidationMessageFor(m => m.UserClassName, "", new { @class = "text-red-500" })
                    </div>
                    <div class="flex justify-end">
                        <button type="submit" class="bg-blue-500 text-white font-bold py-3 px-6 rounded-lg hover:bg-blue-600 transition duration-200">Bắt đầu</button>
                    </div>
                </div>
            }
        </div>
    </div>
</body>
</html>
